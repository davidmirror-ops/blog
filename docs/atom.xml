            <title type="text">Helm Intro</title>
            <link rel="alternate" type="text/html" href="https://davidmirror.dev/posts/helm-intro/" />
            <id>https://davidmirror.dev/posts/helm-intro/</id>
            <updated>2023-05-19T05:30:19-05:00</updated>
            <published>2023-05-12T05:17:01-05:00</published>
